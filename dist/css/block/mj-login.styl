.mj-login {


  &__overlay {
    position: fixed;
    z-index: 200;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    display: flex;
    justify-content: center;
    align-items: center;

    background-color: rgba(0, 0, 0, .15);
  }

  &__additional {
    display: flex;
    flex-direction: column;
    align-items: center;

    &>* {
      margin-bottom: 10px;
    }
  }

  &__box {
    background-color: rgba(255, 255, 255, 1);
    padding: 40px 60px 10px;
    max-width: 420px;

    margin: 20px;

    text-align: center;

    box-shadow: 0 8px 32px -16px rgba(0, 0, 0, 1);

    &>* {
      margin-bottom: 20px;
      width: 100%;
    }
  }

  &__header {
    line-height: 35px;
  }

  &__description {
    opacity: .5;
  }



}


.mj-input {
  height: 50px;
  line-height: 50px;

  margin-bottom: 20px;
  width: 100%;

  border-radius: 2px;

  border: 1px solid rgba(0, 0, 0, .15);
  padding-left: 5px;

  &._error {
    border: 1px solid rgba(120, 0, 0, .5);

    &:after {
      content: "This does not look like an email."
    }
  }
}

.mj-button {
  height: 50px;
  line-height: 50px;
  color: white;
  font-size: 100%;

  padding: 0 32px;

  text-transform: uppercase;

  /*border: none;*/

  border-radius: 4px;
  background-color: $c-main;

  transition: .15s all ease-in-out;

  cursor: pointer;

  border: 1px solid lighten($c-main, 5);

  &:hover {
    background-color: lighten($c-main, 5);
  }

  &._error {
    background-color: lighten(saturation($c-main, 0%), 60);
    cursor: default;
  }
}


.mj-link {
  text-decoration: none;
  color: $c-text;
  padding-bottom: 4px;
  border-bottom: 1px solid alpha($c-main, .15);

  transition: .15s all ease-in-out;

  &:hover {
    border-bottom: 1px solid alpha($c-main, .5);
  }
}


.mj-logout {
  padding: 20px;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 200;
}


.mj-calendar__form {
  position: absolute;
  background-color: #fff;
  padding: 4px 2px;
  z-index: 250;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);

  border-radius: 4px;

  display: flex;

  box-shadow: 0 8px 32px -16px rgba(0, 0, 0, 1);

  &>* {
    margin: 0 2px;
    min-width: 140px;
    white-space: nowrap;

  }

  .mj-button {
    text-align: center;
  }

  .mj-input {
    margin-bottom: 0;

    &:first-child {
      min-width: 400px;
    }
  }

}