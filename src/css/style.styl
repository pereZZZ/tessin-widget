@import 'normalize.styl';

.b-banner {
  font-family: fonts, sans-serif;
  background-image: url('image.png');
  width: 250px;
  height: 360px;
  background: rgba(250, 250, 250, 1);
  overflow: hidden;
  padding: 80px 20px 40px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  color: rgba(80, 80, 80, 1);
  font-size: 14px;
  font-weight: 700;
  line-height: 18px;
  text-align: center;
  text-decoration: none;
  box-sizing: border-box;

  &>* {
    text-decoration: none;
  }


}

.b-header {
  font-size: 135%;
  font-weight: 300;

  b {
    font-weight: 700;
  }
}


.b-text {
  span {
    //font-size: 85%;
    display: block;
    color: rgba(15, 173, 140, 1);
    font-weight: bold;
    text-transform: uppercase;
  }

  &._small {
    font-size: 85%;
    font-weight: 400;
  }
}

.b-button {
  background-color: rgba(133, 74, 213, 1);
  padding: 0 20px;
  cursor: pointer;
  text-transform: uppercase;
  color: white;
  height: 36px;
  line-height: 36px;
  font-weight: 400;

  transition: .1s all ease-in-out;

  &:hover {
    background-color: darken(rgba(133, 74, 213, 1), 10);
  }
}
.b-main {
  font-family: fonts, sans-serif;
  width: 100%;
  background: #f7eae4;
  padding: 5px 0;
  .b-head {
    font-family: fonts, sans-serif;
    text-transform: uppercase;
    margin-left: 5px;
    display flex
  }
  .b-block {
    margin: 5px;
    background: #ead7d0;
    border: 1px solid #d9c7c0;
  }
  .b-headerText {
    font-weight: bold;
    background: #a81712;
    color: white;
    padding:10px;
  }
  .b-blockImg {
    display: flex;
    margin: 10px;
  }
  .b-line{
    margin-top: 6px;
    margin-left: 10px;
    width: 100%;
    height: 6px;
    background: #ceb4a7;
  }
  .b-img__a {
    width: 100%;
    height: 95px;
  }
  .b-img {
    width: 100%;
    height: 95px;
  }
  .b-smallBlockImg {
    font-family: fonts, sans-serif;
    font-weight: bold;
    font-size: 80%;
    width: 33%;
    display: flex;
    flex-direction: column;
    padding-right: 10px;
    &:last-child {
      padding-right: 0;
    }
  }
  .b-buttonBlock {
    font-family: fonts, sans-serif;
    margin: 0 10px;
    line-height: 36px;
    display: flex;
    font-size: 80%;
    justify-content: space-between;
    margin-bottom: 5px;

    .b-buttonBlockText {
      display: flex;
      &__text {
        width: 100px;
      }
      .b-svg{
        width 100px;
        height: 36px;
        margin-left: 5px;
        padding:0;
      }
    }
  }
  .b-button {
    font-family: fonts, sans-serif;
    padding: 5px 60px;
    color: white;
    border: none;
    border-radius: 5px;
    line-height: 0;
    font-size: 100%;
    font-weight: bold;
    background: #174f74;
    text-transform: none;
    &:hover {
      background: #174f74;
      opacity: 0.8;
    }
  }
}
