@import 'normalize.styl';

.b-banner {
  font-family: fonts, sans-serif;
  background-image: url('image.png');
  width: 250px;
  height: 360px;
  background: rgba(250, 250, 250, 1);
  overflow: hidden;
  padding: 80px 20px 40px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  color: rgba(80, 80, 80, 1);
  font-size: 14px;
  font-weight: 700;
  line-height: 18px;
  text-align: center;
  text-decoration: none;
  box-sizing: border-box;

  &>* {
    text-decoration: none;
  }


}

.b-header {
  font-size: 135%;
  font-weight: 300;

  b {
    font-weight: 700;
  }
}


.b-text {
  span {
    //font-size: 85%;
    display: block;
    color: rgba(15, 173, 140, 1);
    font-weight: bold;
    text-transform: uppercase;
  }

  &._small {
    font-size: 85%;
    font-weight: 400;
  }
}

.b-button {
  background-color: rgba(133, 74, 213, 1);
  padding: 0 20px;
  cursor: pointer;
  text-transform: uppercase;
  color: white;
  height: 36px;
  line-height: 36px;
  font-weight: 400;

  transition: .1s all ease-in-out;

  &:hover {
    background-color: darken(rgba(133, 74, 213, 1), 10);
  }
}